<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#b09cdd">
    <!--d6bbff,e5c9f8,b09cdd-->
<!--홈 화면-->
    <!--java파일은 xml명과 동일한 녀석들-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nona_tx"
            android:layout_width="305dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:background="@drawable/textview_line"
            android:elevation="25dp"
            android:gravity="center"
            android:fontFamily="@font/binggraebold"
            android:text="너나묵자"
            android:textColor="@color/purple_200"
            android:textSize="35sp"
            android:transitionName="nonatxTransition" />

        <TextView
            android:id="@+id/with_tx"
            android:layout_width="305dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/textview_line"
            android:elevation="25dp"
            android:gravity="center"

            android:text="같이묵자"
            android:textColor="@color/purple_200"
            android:textSize="35sp"
            android:transitionName="withtxTransition" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="15sp"
        android:backgroundTint="#F783DAD6"
        android:src="@drawable/ic_add"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="90dp"
        android:layout_marginRight="15sp"
        android:src="@drawable/ic_person"
        android:visibility="invisible"
        app:backgroundTint="#FFFFFF"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp" />
    <!-- pressedTranslationZ:버튼클릭시 그림자 범위
        elevation:액티비티 바닥부터 버튼까지의 높이
         visibility:뷰의 가시성 상태 부여(visible:화면에 보이는상태
                invisible : 화면엔 안보이지만 레이아웃 자리는 차지하고 있는 상태
                 gone : 완전히 숨겨진 상태-->


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="165dp"
        android:layout_marginRight="15sp"
        android:src="@drawable/ic_settings"
        android:visibility="invisible"
        app:backgroundTint="#FFFFFF"
        app:elevation="12dp"
        app:pressedTranslationZ="12dp"/>
<!--        app:layout_constraintBottom_toTopOf="@+id/fab1"-->
<!--        app:layout_constraintEnd_toEndOf="@+id/fab1"/>-->



</androidx.coordinatorlayout.widget.CoordinatorLayout>